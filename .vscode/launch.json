    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "log": false,
            "externalConsole": false,
            "pathMappings": {
                "/var/www/html": "/home/phcm/Desenvolvimento/Docker/docker-dev/www/public"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ],
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}